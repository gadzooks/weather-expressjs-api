{
  "name": "weather-expressjs",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:clean && yarn build:typescript && yarn build:static",
    "build:clean": "rimraf dist",
    "build:static": "cpx \"src/**/*.{yml,json}\" dist && cpx \"tests/**/*.{yml,json}\" dist",
    "build:typescript": "yarn tsc --project tsconfig.build.json",
    "cpx": "cpx \"src/**/*.{html,png,jpg}\" dist && cpx \"tests/**/*.{html,png,jpg}\" dist",
    "heroku-prebuild": "yarn config set ignore-scripts true",
    "lint": "eslint ./src --ext .ts --fix",
    "prestart": "yarn build",
    "pretest": "yarn build:static",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "production": "node -r dotenv/config dist/index.js",
    "start": "cross-env NODE_ENV=development concurrently \"yarn tsc --project tsconfig.build.json --watch\" \"nodemon -r dotenv/config -q --inspect dist/index.js\"",
    "test": "cross-env NODE_ENV=test jest --testTimeout=5000",
    "test:unit": "cross-env NODE_ENV=test jest --testPathIgnorePatterns='integration' --testTimeout=5000",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch='**/*.integration.test.ts' --testTimeout=10000",
    "test:e2e": "yarn test:integration",
    "test:all": "yarn test:unit && yarn test:integration",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --coverage --testPathIgnorePatterns='integration'",
    "test:coverage:integration": "jest --coverage --testMatch='**/*.integration.test.ts'",
    "test:bruno": "bruno run bruno-collections/weather-api --env ci",
    "test:bruno:local": "bruno run bruno-collections/weather-api --env local",
    "watch": "jest --watch",
    "watch:integration": "jest --watch --testMatch='**/*.integration.test.ts'",
    "pretest:integration": "yarn build:typescript && yarn build:static",
    "sam:validate": "sam validate --region us-west-1",
    "sam:build": "yarn build && sam build --region us-west-1",
    "sam:local": "yarn sam:build && sam local start-api --region us-west-1",
    "sam:deploy": "yarn sam:build && sam deploy --region us-west-1 --config-env prod --parameter-overrides 'EnvironmentType=prod VisualCrossingApiKey=N6D2TQKQXUA4JAT8QQFW3M4DF CacheTTLHours=3' --no-confirm-changeset --resolve-s3 --capabilities CAPABILITY_IAM",
    "sam:deploy:qa": "yarn sam:build && sam deploy --region us-west-1 --config-env qa --parameter-overrides 'EnvironmentType=qa VisualCrossingApiKey=N6D2TQKQXUA4JAT8QQFW3M4DF CacheTTLHours=12' --no-confirm-changeset --resolve-s3 --capabilities CAPABILITY_IAM",
    "sam:deploy:dev": "yarn sam:build && sam deploy --region us-west-1 --config-env dev --parameter-overrides 'EnvironmentType=dev VisualCrossingApiKey=N6D2TQKQXUA4JAT8QQFW3M4DF CacheTTLHours=24' --no-confirm-changeset --resolve-s3 --capabilities CAPABILITY_IAM",
    "tsc": "tsc"
  },
  "engines": {
    "node": ">=24.x"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.6",
    "@vendia/serverless-express": "^4.12.6",
    "axios": "^1.13.2",
    "body-parser": "^2.2.1",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "cross-env": "^10.1.0",
    "debug": "~4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.1",
    "js-yaml": "^4.1.1",
    "morgan": "~1.10.1",
    "node-cache": "^5.1.2",
    "picomatch": "4.0.3",
    "rimraf": "^6.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@usebruno/cli": "^3.0.2",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
